{
    "name": "paphper/core",
    "description": "Site generator written in PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Narendra Chitrakar",
            "email": "developer.naren@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "league/commonmark": "^1.3",
        "clue/block-react": "^1.3",
        "react/http": "^0.8.6",
        "react/stream": "^1.1",
        "symfony/console": "^5.0",
        "react/filesystem": "^0.1.2",
        "yosymfony/resource-watcher": "^2.0",
        "symfony/dom-crawler": "^5.0",
        "jenssegers/blade": "^1.3",
        "intervention/image": "^2.5"
    },
    "replace": {
        "paphper/contracts":  "self.version"
    },
    "autoload": {
        "psr-4": {
            "Tests\\": "tests/",
            "Paphper\\": "src/"
        },
        "files": [
            "tests/utils.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "friendsofphp/php-cs-fixer": "^2.16"
    }
}
